    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000", // Escucha en localhost en el puerto 8000
                "-t",
                "/home/santi/public_html"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Listening on http://localhost:8000",
                "uriFormat": "http://localhost:8000/E14/index.php"
            },
            "cwd": "/home/santi/public_html/"
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}